<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_gravity="center_horizontal">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/loan_amount_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/loan_id_tv"
            tools:text="Сумма займа 3000" />

        <TextView
            android:id="@+id/percent_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Процент 3000"
            app:layout_constraintStart_toStartOf="@id/loan_amount_tv"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/loan_amount_tv"/>

        <TextView
            android:id="@+id/period_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Период 3000"
            app:layout_constraintStart_toStartOf="@id/loan_amount_tv"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/percent_tv"/>

        <TextView
            android:id="@+id/first_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Имя"
            app:layout_constraintTop_toBottomOf="@id/period_tv"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="16dp"/>
        <TextView
            android:id="@+id/last_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Фамилия"
            app:layout_constraintTop_toBottomOf="@id/first_name_tv"
            app:layout_constraintStart_toStartOf="@id/first_name_tv"
            android:layout_marginTop="8dp"/>
        <TextView
            android:id="@+id/phone_number_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Тел. 123 12399"
            app:layout_constraintTop_toBottomOf="@id/last_name_tv"
            app:layout_constraintStart_toStartOf="@id/last_name_tv"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/status_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Отклонен"
            android:layout_margin="16dp"/>

        <TextView
            android:id="@+id/loan_id_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@+id/status_tv"
            app:layout_constraintTop_toBottomOf="@+id/status_tv"
            tools:text="№124" />

        <TextView
            android:id="@+id/date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/loan_id_tv"
            app:layout_constraintTop_toBottomOf="@+id/phone_number_tv"
            tools:text="12.12.20 12:12" />
    </androidx.constraintlayout.widget.ConstraintLayout>






</LinearLayout>